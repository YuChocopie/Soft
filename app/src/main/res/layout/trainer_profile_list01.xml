<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        >

        <ImageView
            android:id="@+id/t_profile_01_img"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorAccent"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/t_profile_01_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_alignTop="@id/t_profile_01_img"
            android:layout_toRightOf="@id/t_profile_01_img"
            android:textColor="#000000"
            android:textStyle="bold"
            android:maxLength="10"
            android:text="__yujeong__" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/t_profile_01_name"
            android:layout_below="@id/t_profile_01_name"
            android:layout_marginTop="7dp"
            android:text="gildong.hong@snu.ac.krddddddddddd
                        dwdw
                        wdwdqwdwdw
                        "
            android:textColor="#181842" />



    </RelativeLayout>
</LinearLayout>